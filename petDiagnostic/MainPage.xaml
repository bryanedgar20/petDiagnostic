<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="petDiagnostic.MainPage">

    <StackLayout>
        <Label Text="Consumo WEB" FontSize="20" HorizontalTextAlignment="Center"></Label>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="nombre" Text="Nombre" Grid.Row="0" Grid.Column="0" FontSize="14" TextColor="DarkBlue"/>
            <Label x:Name="apellido" Text="Apellido" Grid.Row="0" Grid.Column="1" FontSize="14" TextColor="DarkBlue"/>
            <Label x:Name="edad" Text="Edad" Grid.Row="0" Grid.Column="2" FontSize="14" TextColor="DarkBlue"/>

        </Grid>
        
        <ListView x:Name="MyListView" ItemSelected="MyListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="lblnombre"  Text="{Binding Nombre}" Grid.Row="0" Grid.Column="0">
                                </Label>
                                <Label x:Name="lblapellido"  Text="{Binding Apellido}" Grid.Row="0" Grid.Column="1">
                                </Label>
                                <Label x:Name="lblEdad"  Text="{Binding Edad}" Grid.Row="0" Grid.Column="2">
                                </Label>
                            </Grid>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Nuevo"
                x:Name="btnGet"
                Clicked="btnMostrar_Clicked">
        </Button>
    </StackLayout>

</ContentPage>
